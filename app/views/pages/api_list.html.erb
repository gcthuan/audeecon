<%= content_for :title, "List of APIs"%>

<div class="row">
  <div class="small-12 columns">
  	<h2>List of available APIs</h2>
  	<table>
  	  <thead>
  	  	<tr>
  	  	  <th>URL</th>
  	  	  <th>GET</th>
  	  	  <th>POST</th>
